<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabviews"
        >


        <Spinner
            android:id="@+id/reviewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:entries="@array/reviews_array"
            android:layout_weight="1"
            android:layout_marginTop="10dp"></Spinner>

        <Spinner
            android:id="@+id/sortingCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:entries="@array/sorting_array"
            android:layout_weight="1"
            android:layout_marginTop="10dp"></Spinner>

    </LinearLayout>
     <android.support.v7.widget.RecyclerView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:id="@+id/revcontainer">
        </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noreviews"
        android:text="No Reviews"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>



